#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main(int argc, char *argv[]) {
  char *command = NULL;
  printf("Enter program to run:\n>");
  
  while (1) {

    scanf("%s", command);

    if (fork() == 0) {
      printf("This is a child and the pid is:%d\n", getpid());
      printf("Will execute: %s\n", command);
      break;
    } else {
      printf("This is the parent and the pid is:%d\n", getpid());
    }

  }
}
