#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <sys/wait.h>
#include <unistd.h>

int main(int argc, char *argv[]) {
  char *command = NULL;
  size_t length = 0;

  printf("Enter program to run:\n>");

  getline(&command, &length, stdin);

  while (1) {
    int pid = fork();
    if (pid != 0) {
      waitpid(pid, NULL, 0);
      printf("Enter program to run:\n>");

      getline(&command, &length, stdin);

    } else {
      printf("This is a child and the pid is:%d\n", getpid());
      command[length - 1] = '\a';
      printf("Will execute: %s\n", command);
      if (execl(command, command, NULL) == -1) {
        printf("Execl error\n");
      }
      break;
    }
  }
}
